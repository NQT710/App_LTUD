<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/back_gound_profile"
    tools:context=".fragment.ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"

        tools:ignore="ExtraText">>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tho7mau5"
            app:riv_corner_radius="100dp"></com.makeramen.roundedimageview.RoundedImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="Tran Ngoc Tai"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:drawableStart="@drawable/location"
            android:text="  Tân Bình,Hồ Chí Minh"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="italic" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabDemo"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pagerTest"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>